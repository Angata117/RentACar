@model RentACar.ViewModels.Users.CreateVM
<form action="/Users/Create" method="post">
    <div class="grid">
        <div class="row">
            <div class="col-1">First Name:</div>
            <div class="col-2">
                @Html.TextBoxFor(m => m.FirstName)
            </div>
            <div>
                @Html.ValidationMessageFor(m => m.FirstName)
            </div>
        </div>
        <div class="row">
            <div class="col-1">Last Name:</div>
            <div class="col-2">
                @Html.TextBoxFor(m => m.LastName)
            </div>
            <div>
                @Html.ValidationMessageFor(m => m.LastName)
            </div>
        </div>
        <div class="row">
            <div class="col-1">EGN:</div>
            <div class="col-2">
                @Html.TextBoxFor(m => m.EGN)
            </div>
            <div>
                @Html.ValidationMessageFor(m => m.EGN)
            </div>
        </div>
        <div class="row">
            <div class="col-1">Phone number:</div>
            <div class="col-2">
                @Html.TextBoxFor(m => m.PhoneNumber)
            </div>
            <div>
                @Html.ValidationMessageFor(m => m.PhoneNumber)
            </div>
        </div>
        <div class="row">
            <div class="col-3">
                <input class="right" type="submit" value="Save" />
                <a class="right" href="/Users/Index">Back</a>
            </div>
        </div>
    </div>
</form>